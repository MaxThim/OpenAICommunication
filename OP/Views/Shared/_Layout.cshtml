<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpenAICommunication</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:500" />
    <style>
        * {
            margin: 0;
            padding: 0;
            background-color: #24252A;
        }
        
        li, a, button {
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            font-size: 16px;
            font-weight: 500;
            color: white;
            text-decoration: none;
        }

        header {
            position: relative;
            text-decoration: none;
        }

        .navbar {
            width: 100%;
            display: flex;
            align-items: center;
        }

        nav {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        #title {
            display: inline;
            color: white;
        }

        .nav_links {
            list-style: none;
        }

        .nav_links li {
            display: inline-block;
            padding: 0px 20px;
        }


    </style>
</head>
<body>
    <header>
        <div class="navbar">

            <h1 id="title">OpenAICommunication</h1>
            <nav>
                <ul class="nav_links">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Fine-Tuning</a></li>
                    <li><a href="#">Files</a></li>
                </ul>
            </nav>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
